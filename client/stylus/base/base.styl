.main-inner
	min-height: 500px

.tableheader
	margin-bottom: 15px

.commands
	button, .badge
		margin-left: 3px

.resources

	.resource
		border-bottom: solid 1px $ultralightGray
		border-left: solid 3px $green
		margin: 0 0 25px
		padding: 5px 0
	
		&.isFallback
			border-left: solid 3px $orange

			&.toFallback
				border-left: solid 3px $red

		.key
			color: $green
			padding: 0 5px
	
			&.isFallback
				color: $orange

				&.toFallback
					color: $red

		textarea:disabled, input:disabled
			cursor: pointer

		.translated
			margin-top: 30px


@media (min-width: 980px)
	body
		margin-top: 60px